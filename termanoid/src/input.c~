#include <sio.h>
#include "input.h"

#define true 1
#define false 0

char inputvalues[2];

void init_input() {

}

unsigned char get_input() {
	if ( kbhit() )
		switch( getch() ) {
		case 'a':
			inputvalues[ LEFT ] = ( inputvalues[ LEFT ] == true ) ? false : true;
			printf( "durr" );
			break;
		case 'd':
			inputvalues[ RIGHT ] = inputvalues[ RIGHT ] == true ? false : true;
			break;
		default:
			break;
		}
}
